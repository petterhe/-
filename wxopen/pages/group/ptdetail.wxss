  font-size: 13px;
  font-weight: 600;
  overflow: hidden;
}

.ptgm_memo1 {
  height: 20px;
  line-height: 20px;
  overflow: hidden;
  display: flex;
  flex-direction: row;
}

.ptgm_leftnum1 {
  color: #f33;
}

.ptgm_lefttime1 {
  margin-left: 4px;
