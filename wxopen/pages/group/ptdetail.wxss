.price {
  padding: 0 10px;
  font-size: 13px;
  color: #888;
  height: 36px;
  line-height: 36px;
  background-color: #fff;
}

.num {
  font-size: 20px;
  font-weight: 600;
  color: #f1521b;
}

.baseprice {
  margin-left: 8px;
  text-decoration: line-through;
  color: #888;
}

.order_desc {
  float: right;
  height: 36px;
  line-height: 36px;
}

.productName {
  font-size: 14px;
  color: #444;
  padding: 8px 10px;
  font-weight: 600;
  background-color: #fff;
}

.productdesc {
  padding: 8px 10px;
  font-size: 13px;
  color: #888;
  background-color: #fff;
  border-bottom: 1px #ebebeb solid;
}

.actorTerm {
  padding: 8px 10px;
  font-size: 12px;
  color: #888;
  background-color: #fff;
  border-bottom: 1px #ebebeb solid;
}

.listPT {
  background-color: #fff;
}

.listPT_title {
  padding: 8px 10px;
  font-size: 12px;
  color: #888;
  background-color: #f3f3f3;
}

.ptgm_item {
  display: flex;
  flex-direction: row;
  justify-content: space-betSween;
  padding: 6px 0;
  margin: 0 10px;
  border-bottom: 1px #f3f3f3 solid;
}

.ptgm_avatarUrl {
  position: relative;
  width: 42px;
  height: 42px;
  border-radius: 21px;
  z-index: 40;
  border: 1px solid #f33;
}

.ptgm_detail {
  margin: 2px 0 2px -12px;
  height: 36px;
  display: flex;
  flex-direction: row;
  justify-content: space-betSween;
  border-bottom: 1px #f33 solid;
  border-top: 1px #f33 solid;
  border-top-right-radius: 20px;
  border-bottom-right-radius: 20px;
}

.ptgm_name {
  margin-left: 16px;
  line-height: 36px;
  font-size: 13px;
  font-weight: 600;
  overflow: hidden;
  margin-right: 2px;
}

.ptgm_memo {
  width: 118px;
  line-height: 18px;
  text-align: right;
  overflow: hidden;
  margin-right: 2px;
  font-size: 11px;
  color: #666;
}

.ptgm_leftnum {
  /*color:#ff3333;*/
}

.ptgm_lefttime {
  /*color:#ff3333;*/
}

.ptgm_lefttext {
  font-size: 12px;
  color: #f33;
  margin: auto 2px;
}

.ptgm_jointext {
  background-color: #f33;
  color: #fff;
  line-height: 36px;
  font-size: 13px;
  width: 72px;
  overflow: hidden;
  text-align: center;
  border-top-right-radius: 18px;
  border-bottom-right-radius: 18px;
}

.jointoimg {
  height: 10px;
  width: 6px;
  margin: auto 2px;
}

.ptgm_detail1 {
  margin: 0 0 0 8px;
  height: 36px;
  font-size: 12px;
}

.ptgm_name1 {
  height: 20px;
