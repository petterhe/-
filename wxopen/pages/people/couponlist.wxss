.coupon_image
{
  vertical-align:middle;
  width:60px;
  height:60px;
}

.coupon_amt {
  color:#FFD700;
  font-size: 20px;
  position:absolute;
  width:75px;
  height:80px;
  left:0;
  top:0;
  text-align:center;
  margin: 0 auto;
}

.redpaper_amt 
{
  color:#FFD700;
  font-size: 20px;
  position:absolute;
  width:75px;
  height:80px;
  left:0;
  top:0;
  text-align:center;
  margin: 10px auto;
}

.coupon_title 
{
  color: #444444;
  font-size:14px;
  height: 18px;
  line-height: 18px;
  overflow: hidden;
  padding-top: 6px;
  font-weight: 500;
}

.coupon_text 
{
  color: #888888;
  font-size:13px;
  padding-top: 6px;
  height: 18px;
  line-height: 18px;
  overflow: hidden;
}

.coupon_date 
{
  color: #888888;
  font-size:13px;
  padding-top: 6px;
  height: 18px;
  line-height: 18px;
  overflow: hidden;
}


.touse_button
{
    position: absolute;
    top:50px;
    right: 10px;
    width:60px;
    height: 25px;
    line-height: 25px;
    background-color: #F1521B;
    border-radius:2px;
    text-align: center;
    font-size: 13px;
    color: #fff;
}

.empty_text
{
  width: 750rpx;
  text-align: center;
  margin: 20px 0;
}

.inv_view
{
  position: absolute;
  height:80px;
  width: 750rpx;
  background-color: #f3f3f3;
  filter: Alpha(Opacity=60, Style=0);
  opacity: 0.6;
}