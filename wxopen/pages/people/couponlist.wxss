  height:80px;
  line-height:80px;
  /* margin:0 10px 0 8px; */
}

.couponAmt
{
  width:80px;
  height:80px;
  color:#F1521B;
  font-size: 22px;
  text-align: center; 
  font-weight: 500;
}

.couponFlag
{
  font-size: 16px;
}

.select_tag
{
  position: absolute;
  top:0;
  right: 0;
  width: 20px;
  height: 20px;
}

.coupon_tag
{
  position: absolute;
  top:0;
  left: 0;
  width: 32px;
  height: 32px;
}

