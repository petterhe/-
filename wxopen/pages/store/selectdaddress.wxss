.address_view{
  position:fixed;
  height: 32px;
  line-height: 32px;
  float:left;
  width: 700rpx;
  background-color: #fff;
  border-radius: 16px;
  margin-top: 2px;
  padding-left: 16rpx;
  text-align: left;
  font-size: 13px;
  color: #000;
}

.address_text
{
  color:#000;
}

.searchbutton{
  position: absolute;
  right:16px;
  top:8px;
  width: 20px; 
  height: 20px;
} 

.address_selectshop
{
    text-align: center;
    font-size: 15px;
    padding: 12px 0;
    border-bottom:1px #EBEBEB solid;
    border-top: 1px #EBEBEB solid;
}
.address_line
{
    height: 20rpx;
    background-color: #f3f3f3;
}
.address_addaddress
{
    text-align: center;
    font-size: 15px;
    padding: 12px 0;
    border-bottom:1px #EBEBEB solid;
    border-top: 1px #EBEBEB solid; 
}
.address_addicon
{
    position: absolute;
    margin: -2px -22px;
    width: 19px;
    height: 19px;
}

.address_list
{
    display: block;
    border-bottom:1px #EBEBEB solid;
    font-size: 13px;
    padding: 10px 20rpx;
}

.address_checkbox
{
    content:'';
    position:absolute;
    margin-top: 60rpx;
    left:20rpx;
    width:42rpx;
    height:42rpx;
    border:2rpx #C3C3C3 solid;
    border-radius:42rpx;
    background-color:#fff;
}

.address_text_view
{
    padding-left: 64rpx;
}

.address_text
{
    margin-bottom: 10rpx;
}

.edit_button
{
    float: right;
    width:66px;
    height: 26px;
    line-height: 26px;
    margin-left: 32rpx;
    border:1px #C3C3C3 solid;
    border-radius:2px;
    text-align: center;
}

.del_button
{
    float: right;
    width:66px;
    height: 26px;
    line-height: 26px;
    border:1px #C3C3C3 solid;
    border-radius:2px;
    text-align: center;
}